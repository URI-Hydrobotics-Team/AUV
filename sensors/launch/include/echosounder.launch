<launch>
    <arg name = "port"  default = "/dev/ttyAMA0"/>
    <arg name = "baudrate" default = "9600"/>
    <arg name = "node_name" default = ""/>
    <arg name = "mode" default = "distance"/>

    <node pkg="echosounder" type="echosounder.py" name="echosounder" output="screen">
        <param name = "port" value = "$(arg uart-channel)" type = "str"/>
        <param name = "baudrate" value = "$(arg baudrate)" type = "int"/>
        <param name = "node_name" value = "$(arg node_name" type = "str"/>
        <param name = "mode" value = "$(arg mode" type = "str"/>
    </node>
</launch>